<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="0.5dp"
                android:color="@android:color/white" />
        </shape>
    </item>
    <item>
        <ripple
            android:color="@android:color/white">

            <item android:id="@android:id/mask">
                <shape android:shape="oval">
                    <solid android:color="#000" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>